{
  "id": "skill-issue",
  "name": "Skill Issue",
  "version": "1.0.0",
  "description": "Playfully responds 'skill issue' when users express inability or frustration",
  "author": "Vignesh",
  "triggers": [
    "expression_inability",
    "expression_frustration",
    "expression_stuck"
  ],
  "config": {
    "chance": {
      "type": "number",
      "default": 0.3,
      "description": "Probability of triggering (0.0-1.0)"
    },
    "cooldownMinutes": {
      "type": "number", 
      "default": 5,
      "description": "Minutes before can trigger again"
    },
    "enabled": {
      "type": "boolean",
      "default": true,
      "description": "Enable/disable the skill"
    }
  },
  "hooks": [
    {
      "event": "before_reply",
      "handler": "handler.ts"
    }
  ]
}
